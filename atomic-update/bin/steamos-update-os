set -e
set -u

WHEN=${1:-}

log() { echo >&2 "$@"; }

usage() {
    cat <<EOF
Usage: ${0##*/} now [ATOMUPD-OPTIONS]
       ${0##*/} after-reboot
EOF
    exit 1
}

update_now() {
    if ! steamos-atomupd-client "$@"; then
        log "Update failed"
    fi

    if grep -q 'systemd.unit=steamos-update-os.target' /proc/cmdline; then
        log "Rebooting in 5 seconds"
        sleep 5s
        reboot
    else
        log "You might want to reboot now"
    fi
}

update_after_reboot() {
    touch /run/steamos/update-other
    log "Please reboot to update"
}

case "$WHEN" in
    (now)
        shift
        update_now "$@"
        ;;
    (after-reboot)
        shift
        update_after_reboot
        ;;
    (*)
        usage
        ;;
esac

