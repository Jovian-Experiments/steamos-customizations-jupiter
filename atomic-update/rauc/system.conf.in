[system]
compatible=steamos-amd64
bootloader=custom
max-bundle-download-size=268435456

[keyring]
path=/etc/rauc/keyring.pem

[casync]
tmppath=/tmp

[handlers]
bootloader-custom-backend=@libdir@/rauc/bootloader-custom-backend.sh
pre-install=@libdir@/rauc/pre-install.sh
post-install=@libdir@/rauc/post-install.sh

[slot.rootfs.0]
bootname=self
device=@udev_symlinks_absdir@/self/rootfs
type=raw

[slot.verity.0]
device=@udev_symlinks_absdir@/self/verity
parent=rootfs.0
type=raw

[slot.rootfs.1]
bootname=other
device=@udev_symlinks_absdir@/other/rootfs
type=raw

[slot.verity.1]
device=@udev_symlinks_absdir@/other/verity
parent=rootfs.1
type=raw
