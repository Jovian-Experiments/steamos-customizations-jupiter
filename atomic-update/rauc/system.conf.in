[system]
compatible=steamos-amd64
bootloader=noop
max-bundle-download-size=268435456

[keyring]
path=/etc/rauc/keyring.pem

[casync]
tmppath=/tmp

[handlers]
pre-install=@libdir@/rauc/pre-install.sh
post-install=@libdir@/rauc/post-install.sh

# SteamOS-A

[slot.rootfs.0]
bootname=SteamOS-A
device=@udev_symlinks_absdir@/all/rootfs-A
type=raw

[slot.verity.0]
device=@udev_symlinks_absdir@/all/verity-A
parent=rootfs.0
type=raw

# SteamOS-B

[slot.rootfs.1]
bootname=SteamOS-B
device=@udev_symlinks_absdir@/all/rootfs-B
type=raw

[slot.verity.1]
device=@udev_symlinks_absdir@/all/verity-B
parent=rootfs.1
type=raw
