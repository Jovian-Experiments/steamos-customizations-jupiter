[Unit]
Description=SteamOS Update Operating System Plymouth
Wants=steamos-update-os.service rauc.service
Before=steamos-update-os.service rauc.service
After=plymouth-start.service
Conflicts=plymouth-quit.service

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=@sbindir@/steamos-update-os-plymouth

[Install]
WantedBy=steamos-update-os.target
