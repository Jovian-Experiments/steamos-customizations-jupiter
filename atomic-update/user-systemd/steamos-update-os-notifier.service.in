[Unit]
Description=SteamOS Update Operating System Notifier for the new systemtray specification
Requires=network-online.target
After=network-online.target

[Service]
ExecStart=@sbindir@/kupdate-notifier /usr/lib/steamos/steamos-update-os-notifier.action 3600 \
 --tooltip-title "SteamOS Update Operating System Notifier" \
 --tooltip-subtitle "SteamOS Update Operating System Notifier for the new systemtray specification"

[Install]
WantedBy=default.target
