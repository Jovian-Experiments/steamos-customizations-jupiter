_steamos-grub-mkimage()
{
    local cur prev words cword
    _init_completion || return

    case "$prev" in
        -O|--format)
            COMPREPLY=($(compgen -W "x86_64-efi" -- "$cur"))
            return
            ;;
        -o|--output)
            _filedir
            return
            ;;
        -p|--prefix)
            _filedir -d
            return
            ;;
    esac

    COMPREPLY=($(compgen -W "-h --help -O --format -o --output -p --prefix" -- "$cur"))
} &&
complete -F _steamos-grub-mkimage steamos-grub-mkimage
