[Unit]
Description=Create SteamOS /var/boot Directory
DefaultDependencies=no
Before=shutdown.target
Conflicts=shutdown.target
RefuseManualStart=yes
ConditionKernelCommandLine=ro
ConditionPathExists=!/var/boot
RequiresMountsFor=/var

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=@bindir@/cp -a /boot /var/boot
ExecStart=@bindir@/rm -fr /var/boot/grub
