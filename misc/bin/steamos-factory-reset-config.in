set -u

SYMLINKS_DIR=/dev/disk/by-partsets
HOME_DEVICE=$SYMLINKS_DIR/all/home
ESP_DEVICE=$SYMLINKS_DIR/all/esp
dev=
opts=

echo ESP $ESP_DEVICE $(readlink -f $ESP_DEVICE)

for dev in $SYMLINKS_DIR/all/efi-*;
do
    echo EFI $dev $(readlink -f $dev)
done

for dev in $SYMLINKS_DIR/all/var-*;
do
    opts=$(tune2fs -l "$dev" | sed -n 's/^Filesystem features:\s*//p')
    echo VAR $dev $(readlink -f $dev) "$opts"
done

opts=$(tune2fs -l "$HOME_DEVICE" | sed -n 's/^Filesystem features:\s*//p')
echo HOME $HOME_DEVICE $(readlink -f $HOME_DEVICE) "$opts"
