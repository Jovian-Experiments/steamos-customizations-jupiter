set -euo pipefail

partition=$(findmnt -no partlabel /)
if [[ "$partition" == "rootfs-A" ]]; then
	echo -e "Partition:\tA"
elif [[ "$partition" == "rootfs-B" ]]; then
	echo -e "Partition:\tB"
else
    echo -e "Partition:\tUnknown"
fi
