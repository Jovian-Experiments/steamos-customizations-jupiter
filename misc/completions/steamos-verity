_steamos-verity()
{
    local cur prev words cword
    _init_completion || return

    local args
    _count_args
    if [[ "$args" -eq 1 ]]; then
        if [[ -e /efi/SteamOS/roothash ]]; then
            COMPREPLY=( $( compgen -W "disable status" -- "$cur" ) )
        else
            COMPREPLY=( $( compgen -W "enable status" -- "$cur" ) )
        fi
    fi
} &&
complete -F _steamos-verity steamos-verity
