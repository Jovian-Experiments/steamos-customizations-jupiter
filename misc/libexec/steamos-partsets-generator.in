udev_rules() {
    local partset
    partset="${1##*/}"

    cat <<EOF
#
# Automatically generated file; DO NOT EDIT.
# ${0##*/} $partset
#
EOF

    # must be after 60-persistent-storage.rules
    while read -r name partuuid
    do
        cat <<EOF
ENV{ID_PART_ENTRY_SCHEME}=="gpt", ENV{ID_PART_ENTRY_UUID}=="$partuuid", SYMLINK+="@udev_symlinks_reldir@/$partset/$name"
EOF
    done <"$1" >"/run/udev/rules.d/90-steamos-partsets-${file##*/}.rules"
}

mkdir -p /run/udev/rules.d
for file in "$@"
do
    udev_rules "$file"
done
