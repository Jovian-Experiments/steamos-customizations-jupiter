[Unit]
Description=Create SteamOS User
DefaultDependencies=no
After=local-fs.target
Before=shutdown.target sysinit.target
Conflicts=shutdown.target
ConditionFileIsExecutable=@sbindir@/steamos-mkuser
ConditionPathExists=!/home/steamos

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=@sbindir@/steamos-mkuser

[Install]
WantedBy=sysinit.target
