# Unlocking emergency service sulogin

# Helpers

emergency_service_sulogin_force() {
    mkdir /run/systemd/system/emergency.service.d
    cat <<EOF >/run/systemd/system/emergency.service.d/steamos-emergency.sh.conf
#
# Automatically generated file; DO NOT EDIT.
# ${0##*/} emergency.service
#
[Service]
Environment=SYSTEMD_SULOGIN_FORCE=1
EOF
}

# Main

if [ ! -d /dev/@udev_symlinks_reldir@/self ]; then
    warn "/dev/@udev_symlinks_reldir@/self: No such directory!"
    warn "*** Unlocking emergency service sulogin."
    emergency_service_sulogin_force
fi
