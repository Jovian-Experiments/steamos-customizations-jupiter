UDEV_SYMLINKS_RELDIR=@udev_symlinks_reldir@

. /lib/dracut-lib.sh

mount_root() {

    # Mount the / mountpoint

    info "Mounting /dev/${UDEV_SYMLINKS_RELDIR}/self/rootfs with -o ro"
    mount -o ro "/dev/${UDEV_SYMLINKS_RELDIR}/self/rootfs" "$NEWROOT" 2>&1 | vinfo
    if ismounted "$NEWROOT"; then
        return
    fi

    warn "Mounting /dev/${UDEV_SYMLINKS_RELDIR} failed!" 
    warn "*** Dropping you to a shell; the system will continue"
    warn "*** when you leave the shell."
    emergency_shell
}

ROOT=$(getarg 'root')
if [ -n "$ROOT" ]; then
    exit 0
fi
mount_root
