set -e

opts=(--force --persistent-policy by-partuuid)
while read -r line; do
    if ! read -r pkgbase > /dev/null 2>&1 < "${line%/vmlinuz}/pkgbase"; then
        # if the kernel has no pkgbase, we skip it
        continue
    fi

    kver="${line%/*}"
    kver="${kver##*/}"
    dracut "${opts[@]}" --hostonly "/boot/initramfs-$pkgbase.img" "$kver" "$@"
    dracut "${opts[@]}" --no-hostonly "/boot/initramfs-$pkgbase-fallback.img" "$kver" "$@"
done < <(compgen -G /usr/lib/modules/"*"/vmlinuz)
