set -eu;

# FIXME - get rid of basically all of this

args=()
case "${1:-}" in
    halt|poweroff) mode="shutdown";;
    reboot)        mode="reboot";;
    *)
        echo "Usage: $0 <halt|poweroff|reboot>" >&2
        exit 1
        ;;
esac

for i in update update-other reboot-other
do
    [ -f "/run/steamos/$i" ] || continue

    mode="$i"
    break
done

if [[ ${mode:-} == reboot-other ]]
then
        mount /esp
        mount /efi
        trap "umount /esp; umount /efi" 0
        steamos-bootconf set-mode "${args[@]}"
fi
