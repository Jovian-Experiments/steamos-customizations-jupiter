[Unit]
Description=SteamOS Reboot
After=umount.target
Before=systemd-reboot.service
DefaultDependencies=no
RefuseManualStart=yes

[Service]
Type=oneshot
RemainAfterExit=yes
StandardOutput=journal+console
ExecStart=@libexecdir@/steamos/steamos-reboot reboot

[Install]
WantedBy=reboot.target
