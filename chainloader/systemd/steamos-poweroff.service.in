[Unit]
Description=SteamOS Power Off
After=umount.target
Before=systemd-poweroff.service
DefaultDependencies=no
RefuseManualStart=yes

[Service]
Type=oneshot
RemainAfterExit=yes
StandardOutput=journal+console
ExecStart=@libexecdir@/steamos/steamos-reboot poweroff

[Install]
WantedBy=poweroff.target
